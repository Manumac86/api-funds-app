{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": "airbnb-base",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["warn", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": 0,
    "comma-dangle": [
      "error",
      "never"
    ],
    "arrow-parens": [0],
    "object-curly-spacing": ["warn", "always"],
    "array-bracket-spacing": ["warn", "always"],
    "import/prefer-default-export": [0],
    "no-unused-vars": [
      "warn"
    ],
    "no-var": [
        "off"
    ],
    "one-var": [
        "off"
    ],
    "no-unused-expressions": [
        "off"
    ],
    "no-param-reassign": [
        "off"
    ],
    "consistent-return": "off",
    "no-shadow": "off"
  }
}
